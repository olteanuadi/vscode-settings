{
    // Workflow
    "editor.quickSuggestions":{
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.quickSuggestionsDelay": 90,
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.suggestOnTriggerCharacters": true,
    "editor.acceptSuggestionOnEnter": "off",

    // Editor font appearance
    "editor.fontSize": 20,
    "editor.fontFamily": "JetBrains Mono Regular",
    "editor.fontLigatures": true,
    "editor.lineHeight": 27,


    // Editor color customizations
    "workbench.colorTheme": "Atom One Dark",
    "workbench.colorCustomizations": {
        "[Atom One Dark]": {
            // Editor
            "editor.background": "#131519",
            "editorLineNumber.activeForeground": "#628baf",
            "editorLineNumber.foreground": "#3c4049",
            "editorIndentGuide.background": "#282b31",
            // Sidebar
            "sideBar.background": "#0e0f13",
            "sideBar.foreground": "#8f9197",
            "sideBarSectionHeader.background": "#131519",
            "list.activeSelectionBackground": "#131519",
            "list.inactiveSelectionBackground": "#131519",
            "tree.indentGuidesStroke": "#628baf",  
            // Tabs
            "tab.activeBackground": "#22262e",
            "tab.inactiveBackground": "#131519",
            "tab.border": "#0b0c0f",
            "editorGroupHeader.tabsBackground": "#131519",
            // Activity, title and status bar
            "activityBar.background": "#0b0c0f",
            "titleBar.activeBackground": "#0b0c0f",
            "statusBar.background": "#0b0c0f",
            // Panel
            "panel.border": "#282b31",
            "panelTitle.activeBorder": "#477bff",
            // Miscellaneous
            "widget.shadow": "#263764",
            "breadcrumb.foreground": "#464b55",
            "badge.background": "#477bff",
            "statusBarItem.remoteBackground": "#a660e0"
        }
    },

    // Keywords color customizations
    "editor.tokenColorCustomizations": {
        "[Atom One Dark]": {
            "strings": "#9686cc",
            "numbers": "#abb2bb",
            "keywords": "#d868a6",
            "variables": "#abb2bb"
        },
        "textMateRules": [
            {
                "scope": [
                    "variable.language.special.self.python"
                ],
                "settings": {
                    "foreground": "#477bff",
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "storage.type.class.python",
                    "storage.type.function.python"
                ],
                "settings": {
                    // "foreground": "#0509fc",
                    "foreground": "#de71d7",
                    "fontStyle": "bold"
                }
            },
            {   // Objects (initialization)
                "scope": [
                    "storage.type.java"
                ],
                "settings": {
                    "foreground": "#477bff"
                }
            },
            {   // Primitives, primitive arrays and 'this' keyword
                "scope": [
                    "storage.type.primitive.java",
                    "storage.type.object.array.java",
                    "variable.language.this.java"
                    
                ],
                "settings": {
                    "foreground": "#a660e0"
                }
            },
            {   // Class name (definition)
                "scope": [
                    "entity.name.type.class.java"
                ],
                "settings": {
                    "foreground": "#e5ae49",
                    "fontStyle": "bold"
                }
            },
            {   // Quatation marks and strings
                "scope": [
                   "punctuation.definition.string.begin.java",
                   "punctuation.definition.string.end.java",
                   "punctuation.definition.string.begin.json",
                   "punctuation.definition.string.end.json"
                ],
                "settings": {
                    "foreground": "#806ac9"
                }
            }
        ]
    }
}